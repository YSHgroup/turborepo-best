{
  "name": "turbo-repo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:vue": "turbo dev --filter=app-vuetify-custom",
    "dev:ng": "turbo dev --filter=angular-app",
    "dev:next": "turbo dev --filter=next-tutorial",
    "dev:server": "turbo dev --filter=server"
  },
  "devDependencies": {
    "@mdi/font": "^7.4.47",
    "prettier": "^3.2.5",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
